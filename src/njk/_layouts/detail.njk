{% extends '_layouts/base.njk' %}

{% block content %}
<article class="container">
  <div class="row">
    <div class="col-sm-4 left-rail">
      {% block info %}<img src="img/members/{{ members.image }}" alt="Responsive image" class="img-fluid">
      <h6>{{ members.image }}</h6>
      {% endblock %}
    </div>
    <div class="col-sm-8">
      {% block story %}
      <h2 class= "title">{{ members.name }}</h2>
      <p>Instruments: {{ members.instruments }}</p>
      <p>Tenure: {{ members.tenure }}</p>
      <p>Hometown: {{ members.birthplace }}</p>
      <p>Birthdate: {{ members.birthdate }}</p>
      <p>{{ members.text | safe }}</p>
      {% endblock %}
    </div>
  </div>
</article>
{% endblock %}
